year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite iNEXT.4steps in publications use:")

citEntry(
		 entry = 'manual',
		 title = paste('iNEXT.4steps:', meta$Title),
		 author = personList(as.person("Anne Chao"),
    	                   as.person("Kai-Hsiang Hu")),
		 year = year,
		 note = note,
		 url = "http://chao.stat.nthu.edu.tw/wordpress/software_download/inext-4steps/",
		 textVersion = paste("Anne Chao. and K.-H. Hu", year, "iNEXT.4steps: four steps of INterpolation and EXTrapolation analysis.", note, "URL: http://chao.stat.nthu.edu.tw/wordpress/software_download/inext-4steps/.")
)

